{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./",
    "paths": {
      "@@src/*": [
        "./src/*"
      ],
    },
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "extends": "../../tsconfig.base.json",
  "exclude": [
    "node_modules",
    "**/*/__temp"
  ],
  "include": [
    "src/**/*",
  ]
}
